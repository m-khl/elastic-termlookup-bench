{
    "version": 2,
    "description": "just create",
    "indices": [
        {
            "name": "books"
        }
    ],
    "challenges": [
        {
            "name": "field-update-scenario",
            {% set docs=10000000 %}
            "default": true,
            "schedule": [
                {
                    "operation": {
                        "operation-type": "delete-index"
                    }
                },
                {
                    "operation": {
                        "operation-type": "create-index",
                          "index": "books",
                          "settings": {
                              "number_of_shards": 100,
                              "number_of_replicas": 0
                            },
                          "body": {
                            "mappings": {
                                "books": {
                                  "dynamic": "strict",
                                  "properties": {
                                    "title": {
                                      "type": "text"
                                    },
                                    "abstract": {
                                      "type": "text"
                                    },
                                    "author": {
                                      "type": "text"
                                    },
                                    "pubDate": {
                                      "type": "text"
                                    },
                                    "subscriptions": {
                                      "type":"keyword"
                                    },
                                    "updated": {
                                      "type": "boolean"
                                    }
                                  }
                                }
                              }
                          }
                    }
                }
            ]
        }
    ]
}

