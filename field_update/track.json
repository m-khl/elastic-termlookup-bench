{
	"version": 2,
	"description": "Field update benchmark",
	"indices": [
		{
			"name": "books"
		},
		{
			"name": "subscriptions"
		}
	],
	"challenges": [
        {
            "name": "field-update",
            "schedule": [
                {
                    "operation": {
                        "operation-type": "delete-index"
                    }
                },
                                {
                    "operation": {
                        "operation-type": "create-index",
                          "index": "books",
                          "settings": {
                              "number_of_shards": 100,
                              "number_of_replicas": 0{#,
                              "refresh_interval":"-1"#}
                            },
                          "body": {
                            "mappings": {
                                "books": {
                                  "dynamic": "strict",
                                  "properties": {
                                    "title": {
                                      "type": "text"
                                    },
                                    "abstract": {
                                      "type": "text"
                                    },
                                    "author": {
                                      "type": "text"
                                    },
                                    "pubDate": {
                                      "type": "text"
                                    },
                                    "subscriptions": {
                                      "type":"keyword"
                                    },
                                    "updated": {
                                      "type": "boolean"
                                    }
                                  }
                                }
                              }
                          }
                    }
                },
                {
                    "operation": {
                        "name": "bulk-insert",
                        "operation-type": "bulk",
                        {% set docs=100000000 %}
                        {% set insert_bulk_size=500%}
                        {% set subs=2000 %}
                        {% set subs_per_book=10 %}
                        "bulk-size":{{insert_bulk_size}},
                        "param-source": "insert-books-subs-parallel",
                        "subs-total":{{subs}},
                        "subs-per-book":{{subs_per_book}},
                        "books-total": {{docs}},
                        "detailed-results": true    
                    },
                    "clients": 2
                },
                {#
                    "operation":{ "operation-type":"refresh"}
                },#}
                {
                    "parallel": {
                        "completed-by":"bulk-update",
                        "tasks": [
                            {
                                "operation": {
                                    "name": "randomized search",
                                    "operation-type": "search",
                                    "param-source": "search-subs-filter",
                                    "subs-total":{{subs}}
                                },
                                "clients": 1,
                                "target-throughput": 1
                            },
                            {
                                "operation": {
                                    "name": "bulk-update",
                                    "operation-type": "bulk",
                                    "bulk-size":{{insert_bulk_size}},
                                    "param-source": "update-subs-in-books",
                                    "subs-total":{{subs}},
                                    "subs-per-book":{{subs_per_book}},
                                    "books-total": {{docs}} 
                                },
                                "clients": 1,
                                "iterations": {{(docs/insert_bulk_size)|int}}
                            }

                        ]
                    }
                }
            ]
        },
        {
            "name": "term-lookups",
            "default":true,
            "schedule": [
                {
                    "operation": {
                        "operation-type": "delete-index",
                        "index":["books","subscriptions"]
                    }
                },

                {
                    "parallel": {
                    "tasks": [
                        {
                            "operation": {
                                "name":"make books",
                                "operation-type": "create-index",
                                  "index": "books",
                                  "settings": {
                                      "number_of_shards": 100,
                                      "number_of_replicas": 0{#,
                                      "refresh_interval":"-1"#}
                                    },
                                  "body": {
                                    "mappings": {
                                        "books": {
                                          "dynamic": "strict",
                                          "properties": {
                                            "title": {
                                              "type": "text"
                                            },
                                            "abstract": {
                                              "type": "text"
                                            },
                                            "author": {
                                              "type": "text"
                                            },
                                            "pubDate": {
                                              "type": "text"
                                            }
                                          }
                                        }
                                      }
                                  }
                            }
                        },
                       {
                        "operation": {
                            "operation-type": "create-index",
                            "name":"make subs"
                              "index": "subscriptions",
                              "settings": {
                                  "number_of_shards": 1,
                                  "number_of_replicas": 0{#,
                                  "refresh_interval":"-1"#}
                                },
                              "body": {
                                "mappings": {
                                   "subscription": {
                                     "dynamic": "strict",
                                     "properties": {
                                       "books": {
                                         "type": "keyword"
                                       },
                                       "updated": {
                                         "type": "boolean"
                                       }
                                     }
                                   }
                                 }
                              }
                        }
                    }
                ]}},
                {#
                    "operation":{ "operation-type":"refresh"}
                },#}
                  {
                    "parallel": {
                        "tasks": [
                {
                    "operation": {
                        "name": "bulk-insert-books-only",
                        "operation-type": "bulk",
                        "bulk-size":{{insert_bulk_size}},
                        "param-source": "insert-books-only",
                        "books-total": {{docs}},
                        "detailed-results": true    
                    },
                    "clients": 2
                },
                {
                    "operation": {
                        "name": "bulk-insert-subs-only",
                        "operation-type": "bulk",
                        "bulk-size":{{insert_bulk_size}},
                        "param-source": "insert-subs-only",
                        "subs-total":{{subs}},
                        "books-per-sub":{{(docs*subs_per_book/subs)|int}},
                        "books-total": {{docs}},
                        "detailed-results": true    
                    },
                    "clients": 2
                }]}},
                {
                    "parallel": {
                        "completed-by":"bulk-update-term-lookup",
                        "tasks": [
                            {
                                "operation": {
                                    "name": "randomized search term lookup",
                                    "operation-type": "search",
                                    "param-source": "search-terms-lookup",
                                    "subs-total":{{subs}}
                                },
                                "clients": 1,
                                "target-throughput": 1
                            },
                            {
                                "operation": {
                                    "name": "bulk-update-term-lookup",
                                    "operation-type": "bulk",
                                    "bulk-size":{{insert_bulk_size}},
                                    "param-source": "update-subs-only",
                                    "books-per-sub":{{(docs*subs_per_book/subs)|int}},
                                    "subs-total":{{subs}},
                                    "books-total": {{docs}} 
                                },
                                "clients": 1,
                                "iterations": {{subs}}
                            }

                        ]
                    }
                }
            ]
        }
    ]
}

