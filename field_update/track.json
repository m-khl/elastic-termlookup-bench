{
    "version": 2,
    "description": "Field update benchmark",
    "indices": [
        {
            "name": "books"
        }
    ],
    "challenges": [
        {
            "name": "field-update-scenario",
            {% set docs=10000000 %}
            "default": true,
            "schedule": [
                {
                    "operation": {
                        "operation-type": "delete-index"
                    }
                },
                {
                    "operation": {
                        "operation-type": "create-index",
                          "index": "books",
                          "settings": {
                              "number_of_shards": 100,
                              "number_of_replicas": 0
                            },
                          "body": {
                            "mappings": {
                                "books": {
                                  "dynamic": "strict",
                                  "properties": {
                                    "title": {
                                      "type": "text"
                                    },
                                    "abstract": {
                                      "type": "text"
                                    },
                                    "author": {
                                      "type": "text"
                                    },
                                    "pubDate": {
                                      "type": "text"
                                    },
                                    "subscriptions": {
                                      "type":"keyword"
                                    },
                                    "updated": {
                                      "type": "boolean"
                                    }
                                  }
                                }
                              }
                          }
                    }
                },
                {
                    "operation": {
                        "name": "bulk-insert",
                        "operation-type": "bulk",
                        {% set bulksize=1000 %}
                        "bulk-size":{{bulksize}},
                        "param-source": "insert-books-subs-parallel",
                        "subs-total":2000,
                        "subs-per-book":10,
                        "books-total", {{docs}} 
                        {#"not-in use- num docs in subscription":500000#}
                    },
                    "clients": 10{#,
                    "iterations": {{(docs/bulksize)|int}#}
                }{#,
                {
                    "parallel": {
                        "completed-by":"bulk-update",
                        "tasks": [
                            {
                                "operation": {
                                    "name": "randomized search",
                                    "operation-type": "search",
                                    "param-source": "search-param-source",
                                    "titles":{% include 'titles.txt' %},
                                    "subscriptions":{% include 'subscriptions.txt' %}
                                },
                                "clients": 1,
                                "target-throughput": 1
                            },
                            {
                                "operation": {
                                    "name": "bulk-update",
                                    "operation-type": "bulk",
                                    "bulk_size":100,
                                    "param-source": "update-param-source",
                                    "num_ids":1255614,
                                    "subscriptions":{% include 'subscriptions.txt' %}
                                },
                                "clients": 1,
                                "iterations": 12556
                            }

                        ]
                    }
                }#}
            ]
        }
    ]
}

