{
	"version": 2,
	"description": "Benchmark for research task",
	"indices": [
		{
			"name": "books",
			"body": "books_index.json",
			"types": [ "book" ]
		}
	],
	"challenges": [
		{
			"name": "field-update-scenario",
			"default": true,
			"schedule": [
				{
					"operation": {
						"operation-type": "delete-index"
					}
				},
				{
					"operation": {
						"operation-type": "create-index"
					}
				},
				{
					"operation": {
						"name": "bulk-insert",
						"operation-type": "bulk",
						"bulk-size":1000,
						"param-source": "insert-param-source",
						"num_ids":1255615
					}
				},
				{
					"parallel": {
						"tasks": [
							{
								"operation": {
									"name": "randomized search",
									"operation-type": "search",
									"param-source": "search-param-source",
									"titles":{% include 'titles.txt' %},
									"subscriptions":{% include 'subscriptions.txt' %}
								},
								"clients": 8,
								"iterations": 1000,
								"target-throughput": 100
							},
							{
								"operation": {
									"name": "bulk-update",
									"operation-type": "bulk",
									"bulk-size":100,
									"param-source": "update-param-source",
									"num_ids":1255615,
									"subscriptions":{% include 'subscriptions.txt' %}
								},
								"clients": 1,
								"iterations": 4000,
								"target-throughput": 100
							}

						]
					}
				}
			]
		}
	]
}

